/* Container styling */
form .form-floating {
    position: relative;
}

/* Adjust spacing between fields */
form .form-floating {
    margin-bottom: 1rem;
}

/* Ensure form inputs have enough padding for floating labels */
.form-floating > .form-control,
.form-floating > .form-select {
    padding-top: 1.2rem;
    padding-bottom: 0.5rem;
}

/* Styling the floating labels */
.form-floating > label {
    padding-left: 0.75rem;
    color: #6c757d;
    font-weight: 500;
}

/* Smooth transitions on focus */
.form-control:focus, .form-select:focus {
    border-color: #007bff;
    box-shadow: 0 0 0 0.15rem rgba(0, 123, 255, 0.25);
}

/* Buttons styling */
form .btn {
    font-weight: 600;
    font-size: 1rem;
}

form .btn-primary {
    background-color: #007bff;
    border-color: #007bff;
}

form .btn-outline-secondary {
    border-color: #6c757d;
    color: #6c757d;
}

form .btn-outline-secondary:hover {
    background-color: #f8f9fa;
}
